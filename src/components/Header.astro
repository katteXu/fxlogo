---
import Hamburger from "./Hamburger.astro";
import { Image } from "astro:assets";
import fxlogo from "../assets/fxlogo.png";
import "../styles/global.css";

const menu = [
  { name: "首页", href: "/" },
  { name: "关于我们", href: "/about/" },
  { name: "产品", href: "/products/" },
  { name: "联系我们", href: "/contact/" },
];
---

<!-- 头部 -->
<header class="bg-gray-100/80 fixed w-screen backdrop-blur-sm z-50">
  <section class="md:w-[1440px] m-auto p-5 sticky top-0 flex items-center">
    <div class="flex items-center m-0">
      <Image src={fxlogo} class="w-10 h-10 rounded-md" alt="logo" />
      <span class="ml-4 text-xl md:hidden block">菲心宝</span>
    </div>

    <nav
      class="md:ml-8 m-0 md:static fixed md:bg-transparent top-[70px] left-0 right-0 md:h-auto"
    >
      <ul
        class="list-none md:flex flex-col md:flex-row m-0 md:p-0 p-8 md:space-x-10 md:space-y-0 space-y-4 md:text-[#2C2D2F] text-white h-full items-center md:text-xl text-2xl md:w-max w-[300px] md:bg-transparent md:static absolute -left-[300px] md:transition-none transition-[left]"
      >
        {
          menu.map((item) => (
            <li class="flex">
              <a
                transition:persist
                href={item.href}
                class="flex w-full items-center"
              >
                {item.name}
                <svg
                  class="md:hidden block ml-auto"
                  width="24"
                  height="24"
                  viewBox="0 0 48 48"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M19 12L31 24L19 36"
                    stroke="#fff"
                    stroke-width="4"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <Hamburger />
  </section>
</header>
